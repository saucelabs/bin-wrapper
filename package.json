{
  "name": "@saucelabs/bin-wrapper",
  "version": "2.1.0",
  "description": "Fetches and runs a binary",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**"
  ],
  "scripts": {
    "build": "rimraf ./lib && tsc",
    "lint": "prettier --check '**/*.{js,ts,mjs,cjs}' && eslint .",
    "fmt": "prettier --write '**/*.{js,ts,mjs,cjs}'",
    "prepare": "husky",
    "test": "jest --coverage",
    "release": "tsc && release-it --github.release",
    "release:ci": "tsc && npm run release -- --ci --no-git.requireCleanWorkingDir",
    "release:patch": "npm run release -- patch",
    "release:minor": "npm run release -- minor",
    "release:major": "npm run release -- major"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/saucelabs/bin-wrapper.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  },
  "author": "DevX <devx@saucelabs.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/saucelabs/bin-wrapper/issues"
  },
  "homepage": "https://github.com/saucelabs/bin-wrapper#readme",
  "dependencies": {
    "adm-zip": "^0.5.15",
    "axios": "^1.7.5",
    "https-proxy-agent": "^7.0.5",
    "tar-stream": "^3.1.7"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@tsconfig/node22": "^22.0.0",
    "@types/adm-zip": "^0.5.5",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.16.2",
    "@types/tar-stream": "^3.1.3",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.8.1",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.5",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "release-it": "^17.6.0",
    "rimraf": "^6.0.1",
    "spawk": "^1.8.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^7.18.0"
  }
}
